<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Roboto"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Roboto+Mono"
    />
    <style>
      <%- style %>
    </style>
  </head>
  <body>
    <div class="front-matter">
      <h1><%= title %></h1>
      <%- description %>
      <div class="toc">
        <% paths.forEach(path => { %>
        <div class="entry">
          <span class="path"><%= path.path %></span>
          <% path.operations.forEach(operation => { %>
          <span class="operation"
            ><span class="method <%= operation.method %>"
              ><%= operation.method %></span
            >
            <%= operation.name %></span
          ><% }); %>
        </div>
        <% }); %>
      </div>
    </div>

    <% paths.forEach(path => { %>
    <div class="path">
      <% path.operations.forEach(operation => { %>
      <h2>
        <span class="path">
          <%= operation.path %>
          <span class="method <%= operation.method %>"
            ><%= operation.method %></span
          ></span
        >
        <%= operation.name %>
      </h2>

      <div class="description"><%- operation.description %></div>
      <% }); %>
    </div>
    <% }); %>
  </body>
</html>
